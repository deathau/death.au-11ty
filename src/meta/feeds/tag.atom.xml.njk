---
layout: feeds/atom.njk
pagination: 
  data: collections
  size: 1
  alias: tag
  addAllPagesToCollections: true
  filter:
    - all
    - everything
    - everything-reversed
    - authors
    - articles
    - notes
permalink: /tag/{{ tag | slug }}/atom.xml
eleventyComputed: 
  title: "{{ metadata.title | safe }} posts tagged {{ tag }}"
  link: "{{ metadata.base }}/tag/{{ tag | slug }}/atom.xml"
---
<id>{{ metadata.base | addPathPrefixToFullUrl }}tag/{{ tag | slug }}/</id>
{% set taglist = collections[ tag ] %}
{%- for post in taglist | reverse  %}
  {% include "feeds/atom.entry.njk" %}
{%- endfor %}
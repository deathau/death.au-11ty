---js
{
  buildDate: new Date(new Date().getTime() + new Date().getTimezoneOffset() * 60000)
}
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/css/simple-rss.xslt"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ title | safe }}</title>
    <link>{{ metadata.base | addPathPrefixToFullUrl }}</link>
    <atom:link rel="self" href="{{ link }}" type="application/rss+xml" />
    <description>{{ metadata.description }}</description>
    <language>{{ metadata.language or page.lang }}</language>
    <lastBuildDate>{{ buildDate | dateToRfc822 }}</lastBuildDate>
    <docs>https://www.rssboard.org/rss-specification</docs>
    {{ content | safe }}
  </channel>
</rss>
---js
{
  pagination: {
    data: "collections.authors",
    size: 1,
    alias: "author",
    addAllPagesToCollections: true
  },
  permalink: "/author/{{ author | slug }}/rss.xml",
  layout: null,
  buildDate: new Date(new Date().getTime() + new Date().getTimezoneOffset() * 60000)
}
---
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ metadata.title | safe }} posts by “{{ author }}”</title>
    <link>{{ metadata.base | addPathPrefixToFullUrl }}</link>
    <atom:link rel="self" href="{{ metadata.base | addPathPrefixToFullUrl }}{{ permalink }}" type="application/rss+xml" />
    <description>{{ metadata.description }}</description>
    <language>{{ metadata.language or page.lang }}</language>
    <lastBuildDate>{{ buildDate | dateToRfc822 }}</lastBuildDate>
    <docs>https://www.rssboard.org/rss-specification</docs>
    {% set authorlist = collections.authors[ author ] %}
    {% for post in authorlist | reverse %}
      {% include "_partials/_feed/rss.item.njk" %}
    {% endfor %}
  </channel>
</rss>